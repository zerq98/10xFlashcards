---
import Layout from '../../layouts/Layout.astro';
import { ChangePasswordForm } from '../../components/auth/ChangePasswordForm';
import { protectRoute } from '../../middleware';

// Ochrona tej strony - tylko dla zalogowanych użytkowników
export const prerender = false;
export const onRequest = protectRoute;
---

<Layout title="10xFlashcards - Zmiana hasła">
  <div class="min-h-screen bg-background text-text">
    <div class="container mx-auto px-4 py-8">
      <div class="w-full max-w-md mx-auto">
        <h1 class="text-3xl font-bold mb-8 text-text bg-gradient-to-r from-primary via-secondary-400 to-accent-200 text-transparent bg-clip-text">
          Zmiana hasła
        </h1>
        
        <div class="w-full bg-gray-900/50 rounded-lg p-6 shadow-lg border border-gray-800">
          <ChangePasswordForm client:load />
        </div>
      </div>
    </div>
  </div>
</Layout>
