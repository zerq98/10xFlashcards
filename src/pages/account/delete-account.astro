---
import Layout from '../../layouts/Layout.astro';
import { DeleteAccountForm } from '../../components/auth/DeleteAccountForm';
---

<Layout title="10xFlashcards - Usunięcie konta">
  <div class="min-h-screen bg-background text-text">
    <div class="container mx-auto px-4 py-8">
      <div class="w-full max-w-md mx-auto">
        <h1 class="text-3xl font-bold mb-8 text-text bg-gradient-to-r from-red-500 to-red-300 text-transparent bg-clip-text">
          Usunięcie konta
        </h1>
        
        <div class="w-full bg-gray-900/50 rounded-lg p-6 shadow-lg border border-gray-800">
          <DeleteAccountForm client:load />
        </div>
      </div>
    </div>
  </div>
</Layout>
