---
import AuthLayout from '../layouts/AuthLayout.astro';
import { LoginForm } from '../components/auth/LoginForm';
---

<AuthLayout title="10xFlashcards - Logowanie">
  <div class="auth-container">
    <h1 class="text-3xl font-bold mb-6 text-center bg-gradient-to-r from-primary via-secondary-400 to-accent-200 text-transparent bg-clip-text">
      Logowanie
    </h1>
    
    <div class="w-full bg-gray-900/50 rounded-lg p-6 shadow-lg border border-gray-800">
      <LoginForm client:load />
      
      <div class="mt-6 text-center space-y-2">
        <p class="text-sm">
          Nie pamiętasz hasła? 
          <a href="/forgot-password" class="text-primary hover:underline transition-colors">
            Zresetuj je
          </a>
        </p>
        <p class="text-sm">
          Nie masz jeszcze konta? 
          <a href="/register" class="text-primary hover:underline transition-colors">
            Zarejestruj się
          </a>
        </p>
      </div>
    </div>
  </div>
</AuthLayout>

<style>
  .auth-container {
    width: 100%;
    max-width: 450px;
    margin: 0 auto;
  }
</style>
